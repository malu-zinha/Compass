# EditorConfig helps maintain consistent coding styles between different editors and IDEs
root = true

[*
]
# Default settings
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 120

# Markdown: allow trailing spaces (for hard line breaks) and no max length
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# JSON: keep 2 spaces
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# JavaScript / TypeScript / JSX / TSX
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

# HTML / CSS / SCSS
[*.{html,css,scss}]
indent_size = 2

# Shell scripts: do not trim trailing whitespace (can be meaningful)
[*.sh]
trim_trailing_whitespace = false
end_of_line = lf

# Makefiles must use tabs
[Makefile]
indent_style = tab
